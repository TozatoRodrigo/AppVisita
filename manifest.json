  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Visualizar pacientes pendentes",
      "url": "/?section=dashboard",
      "icons": [
        {
          "src": "icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Adicionar Paciente",
      "short_name": "Novo Paciente",
      "description": "Cadastrar novo paciente",
      "url": "/?section=add-patient",
      "icons": [
        {
          "src": "icons/shortcut-add.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Buscar Paciente",
      "short_name": "Buscar",
      "description": "Buscar paciente existente",
      "url": "/?section=search",
      "icons": [
